<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="itesm.mx.app.ProfileActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:src="@drawable/avatar"
            android:background="#FFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="toRank"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Regina Trani"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:maxHeight="100dp"
            android:src="@drawable/niveluno"
            android:maxWidth="100dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <com.gc.materialdesign.views.ButtonRectangle
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Despliega todos los rankings"
            android:id="@+id/button6"
            android:onClick="showRankActivity"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:background="#ff4caf50" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="120dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:background="@drawable/donar"
                android:layout_gravity="center_horizontal"
                android:focusableInTouchMode="false"
                android:onClick="toRank"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
